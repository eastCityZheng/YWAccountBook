<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <!-- 设置日志输出根目录 -->
    <property name="encoding" value="UTF-8" />
    <!--<property name="normal-pattern" value="%d{MM-dd HH:mm:ss} %-5level [%thread]
        %logger{10}.%M:%L %msg%n" /> -->
    <property name="normal-pattern" value="[%-5level] %d{ISO8601}  %msg%n" />
    <property name="console-pattern"
              value="%d{yyyy-MM-dd HH:mm:ss}|%.-5level|%-40.40logger{0}|%msg%n" />
    <property name="plain-pattern" value="%d{MM-dd HH:mm:ss} %msg%n" />


    <!-- 定义日志的根目录 -->
    <property name="LOG_HOME" value="/opt/applog/MskyLog/umeDetr" />
    <!-- 定义日志文件名称 -->
    <property name="logformat" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]-[%-5level][%logger{50}:%line]-%msg%n" />
    <!-- 定义日志文件名称 -->

    <!-- log file default -->
    <appender name="UmetripDetr"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>${LOG_HOME}/UmetripDetr.log</file>
        <encoder>
            <pattern>${normal-pattern}</pattern>
            <charset>${encoding}</charset>
        </encoder>
        <prudent>false</prudent>
        <append>false</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}/UmetripDetr.log.%d{yyyy-MM-dd}
            </FileNamePattern>
            <MaxHistory>60</MaxHistory>
        </rollingPolicy>
    </appender>

    <!-- error -->
    <appender name="UmetripDetrErr"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <file>${LOG_HOME}/UmetripDetrErr.log</file>
        <encoder>
            <pattern>${normal-pattern}</pattern>
            <charset>${encoding}</charset>
        </encoder>
        <prudent>false</prudent>
        <append>false</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}/UmetripDetrErr.log.%d{yyyy-MM-dd}
            </FileNamePattern>
            <MaxHistory>60</MaxHistory>
        </rollingPolicy>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${console-pattern}</pattern>
            <charset>${encoding}</charset>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
